<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="45dp"
                android:text="Nouveau profil"
                android:textSize="31dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textFirstName"
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="Prénom"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textLastName"
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="Nom"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textIdentifier"
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="Identifiant"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/identifier"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="Email"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/email"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textPhone"
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="Téléphone"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:inputType="textPhonetic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textSIREN"
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="SIREN"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/SIREN"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textSIRET"
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="SIRET"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/SIRET"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textCreationDate"
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="Date de création"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/creation_date"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:inputType="date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textTaxation"
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:text="Imposition"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/taxation"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_new_business"
                android:layout_width="210dp"
                android:layout_height="58dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="50dp"
                android:text="Créer le profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>